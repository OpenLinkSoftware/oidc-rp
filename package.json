{
  "name": "oidc-rp",
  "version": "0.1.0",
  "description": "OpenID Connect Relying Party client library",
  "main": "lib/index.js",
  "files": [
    "lib",
    "dist"
  ],
  "scripts": {
    "build-lib": "babel src -d lib",
    "build": "npm run clean-lib && npm run build-lib",
    "clean-lib": "rm -rf lib/*",
    "build-dist": "webpack --progress --colors --optimize-minimize --optimize-occurrence-order --optimize-dedupe",
    "dist": "npm run build && npm run build-dist",
    "prepublish": "npm run build && npm run build-dist",
    "test": "mocha -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anvilresearch/oidc-rp.git"
  },
  "author": "Anvil Research, Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anvilresearch/oidc-rp/issues"
  },
  "homepage": "https://github.com/anvilresearch/oidc-rp#readme",
  "dependencies": {
    "base64url": "^2.0.0",
    "jose": "git://github.com/anvilresearch/jose.git#lib",
    "json-document": "git://github.com/anvilresearch/json-document.git#lib",
    "node-fetch": "^1.6.3",
    "text-encoding": "^0.6.1",
    "urlutils": "0.0.3",
    "webcrypto": "git://github.com/anvilresearch/webcrypto.git"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "mocha": "^3.2.0",
    "webpack": "^1.13.1"
  }
}
